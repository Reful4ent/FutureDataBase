<Window x:Class="MetadataProg.View.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetadataProg.View"
        mc:Ignorable="d"
        Icon="/MetadataProg;component/img/MainIcon.png"
        Title="АИС Отдел кадров" 
        Height="450"
        Width="800"
        Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary Source="/MetadataProg;component/View/Styles/MenuStyles.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="500"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Menu x:Name="Navigation" Grid.Row="0" Style="{StaticResource ResourceKey=Navigation--style}">
        </Menu>
        <Grid x:Name="Main" Grid.Row="1" Style="{StaticResource ResourceKey=Main--style}">
            <TextBlock x:Name="das"></TextBlock>
        </Grid>
    </Grid>
</Window>
